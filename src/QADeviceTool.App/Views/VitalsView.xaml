<UserControl x:Class="QADeviceTool.Views.VitalsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:QADeviceTool.ViewModels">

    <Grid Margin="24,16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ═══════ LEFT: Device List ═══════ -->
        <Border Grid.Column="0" Style="{StaticResource GlassCard}" Margin="0,0,8,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Android Devices" Style="{StaticResource TextHeading2}" Margin="0,0,0,8" />
                    <TextBlock Text="Vitals dashboard monitors device memory and CPU (Android only)." 
                               Style="{StaticResource TextCaption}" TextWrapping="Wrap" />
                </StackPanel>

                <TextBlock DockPanel.Dock="Top"
                           Text="No Android devices detected."
                           Margin="0,8,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBody}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Devices.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <ListBox ItemsSource="{Binding Devices}"
                         SelectedItem="{Binding SelectedDevice}"
                         Style="{StaticResource DarkListBox}"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource DarkListBoxItem}" />
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding PlatformIcon}" FontSize="18" 
                                           VerticalAlignment="Center" Margin="0,0,8,0" />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DisplayName}" 
                                               Foreground="{StaticResource BrushTextPrimary}"
                                               FontSize="13" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Serial}" Style="{StaticResource TextCaption}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- ═══════ RIGHT: Vitals Dashboard ═══════ -->
        <Border Grid.Column="1" Style="{StaticResource GlassCard}" Margin="8,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock DockPanel.Dock="Left" Text="System Vitals" Style="{StaticResource TextHeading2}" VerticalAlignment="Center" />
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Auto-refresh (3s)" VerticalAlignment="Center" Margin="0,0,12,0" Foreground="{StaticResource BrushTextMuted}" />
                        <ToggleButton 
                                      Content="{Binding IsPolling, Converter={x:Static vm:BooleanToPlayPauseConverter.Instance}}"
                                      Width="80"
                                      Command="{Binding TogglePollingCommand}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="12,6">
                                        <TextBlock Text="{TemplateBinding Content}" Foreground="{StaticResource BrushTextPrimary}" HorizontalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Background" Value="{StaticResource BrushDanger}" />
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="False">
                                            <Setter Property="Background" Value="{StaticResource BrushSuccess}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                            <ToggleButton.IsChecked>
                                <Binding Path="IsPolling" Mode="OneWay" />
                            </ToggleButton.IsChecked>
                        </ToggleButton>
                    </StackPanel>
                </DockPanel>

                <!-- CPU / Top Processes -->
                <Border Grid.Row="1" Background="{StaticResource BrushBackgroundDarkest}" CornerRadius="6" BorderBrush="{StaticResource BrushBorder}" BorderThickness="1" Margin="0,0,0,8" Padding="12">
                    <StackPanel>
                        <TextBlock Text="Top Processes (CPU &amp; Memory)" Style="{StaticResource TextCaption}" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{StaticResource BrushAccent}" />
                        <TextBox Text="{Binding TopProcessesOutput, Mode=OneWay}"
                                 Style="{StaticResource TerminalTextBox}"
                                 IsReadOnly="True"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Background="Transparent"
                                 Foreground="#E6EDF3"
                                 BorderThickness="0"
                                 MinHeight="150" />
                    </StackPanel>
                </Border>

                <!-- System Memory -->
                <Border Grid.Row="2" Background="{StaticResource BrushBackgroundDarkest}" CornerRadius="6" BorderBrush="{StaticResource BrushBorder}" BorderThickness="1" Margin="0,8,0,0" Padding="12">
                    <StackPanel>
                        <TextBlock Text="Memory Summary" Style="{StaticResource TextCaption}" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{StaticResource BrushAccent}" />
                        <TextBox Text="{Binding MemInfoOutput, Mode=OneWay}"
                                 Style="{StaticResource TerminalTextBox}"
                                 IsReadOnly="True"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Background="Transparent"
                                 Foreground="#E6EDF3"
                                 BorderThickness="0"
                                 MinHeight="100" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
