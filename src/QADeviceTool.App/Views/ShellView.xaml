<UserControl x:Class="QADeviceTool.Views.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:QADeviceTool.ViewModels">

    <Grid Margin="24,16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ═══════ LEFT: Device List ═══════ -->
        <Border Grid.Column="0" Style="{StaticResource GlassCard}" Margin="0,0,8,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Android Devices" Style="{StaticResource TextHeading2}" Margin="0,0,0,8" />
                    <TextBlock Text="Shell command interface is available for Android targets." 
                               Style="{StaticResource TextCaption}" TextWrapping="Wrap" />
                </StackPanel>

                <TextBlock DockPanel.Dock="Top"
                           Text="No Android devices detected."
                           Margin="0,8,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBody}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Devices.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <ListBox ItemsSource="{Binding Devices}"
                         SelectedItem="{Binding SelectedDevice}"
                         Style="{StaticResource DarkListBox}"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource DarkListBoxItem}" />
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding PlatformIcon}" FontSize="18" 
                                           VerticalAlignment="Center" Margin="0,0,8,0" />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DisplayName}" 
                                               Foreground="{StaticResource BrushTextPrimary}"
                                               FontSize="13" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Serial}" Style="{StaticResource TextCaption}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- ═══════ RIGHT: Shell Terminal ═══════ -->
        <Border Grid.Column="1" Style="{StaticResource GlassCard}" Margin="8,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock DockPanel.Dock="Left" Text="Device Shell" Style="{StaticResource TextHeading2}" VerticalAlignment="Center" />
                    <Button DockPanel.Dock="Right" Style="{StaticResource SecondaryButton}" Content="Clear Output" 
                            Command="{Binding ClearOutputCommand}" Padding="12,6" HorizontalAlignment="Right" />
                </DockPanel>

                <!-- Terminal Output -->
                <TextBox Grid.Row="1" 
                         Text="{Binding ShellOutput, Mode=OneWay}"
                         Style="{StaticResource TerminalTextBox}"
                         IsReadOnly="True"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="13"
                         Background="#0D1117"
                         Foreground="#E6EDF3"
                         BorderThickness="1"
                         BorderBrush="{StaticResource BrushBorderMuted}"
                         Padding="8"
                         Margin="0,0,0,12">
                     <TextBox.Triggers>
                         <EventTrigger RoutedEvent="TextBox.TextChanged">
                             <!-- Auto-scroll behavior would go here, often implemented in code-behind or behavior -->
                         </EventTrigger>
                     </TextBox.Triggers>
                </TextBox>

                <!-- Input Area -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="$ " FontFamily="Consolas" FontSize="16" 
                               Foreground="{StaticResource BrushAccent}" VerticalAlignment="Center" Margin="8,0" />

                    <TextBox Grid.Column="1" 
                             Text="{Binding CommandInput, UpdateSourceTrigger=PropertyChanged}"
                             Background="{StaticResource BrushBackgroundDarkest}"
                             Foreground="{StaticResource BrushTextPrimary}"
                             BorderBrush="{StaticResource BrushBorder}"
                             BorderThickness="1"
                             FontFamily="Consolas"
                             FontSize="14"
                             Padding="10,8"
                             VerticalContentAlignment="Center"
                             IsEnabled="{Binding SelectedDevice, Converter={x:Static vm:NullToBoolConverter.Instance}}">
                        <!-- Normally we'd bind Enter key to a command here using input bindings -->
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding ExecuteCommandCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>

                    <Button Grid.Column="2" 
                            Style="{StaticResource PrimaryButton}" 
                            Content="Send"
                            Command="{Binding ExecuteCommandCommand}"
                            Margin="12,0,0,0" Padding="16,0" Width="80"
                            IsEnabled="{Binding IsExecuting, Converter={x:Static vm:InverseBoolConverter.Instance}}" />
                </Grid>

            </Grid>
        </Border>
    </Grid>
</UserControl>
