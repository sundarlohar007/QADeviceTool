<UserControl x:Class="QADeviceTool.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:QADeviceTool.ViewModels">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="32,24">

            <TextBlock Text="Settings" Style="{StaticResource TextHeading1}" Margin="0,0,0,24" />

            <!-- Tool Dependencies -->
            <Border Style="{StaticResource GlassCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Dependency Status" Style="{StaticResource TextHeading2}" />
                        <Button Style="{StaticResource SecondaryButton}" Content="Re-check"
                                Command="{Binding CheckDependenciesCommand}"
                                Margin="16,0,0,0" Padding="12,6" FontSize="12"
                                VerticalAlignment="Center" />
                    </StackPanel>

                    <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource TextBody}" Margin="0,0,0,12" />

                    <ItemsControl ItemsSource="{Binding ToolStatuses}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BrushBackgroundMedium}"
                                        CornerRadius="8" Padding="16,14" Margin="0,0,0,8"
                                        BorderBrush="{StaticResource BrushBorder}" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding StatusIcon}"
                                                   FontSize="22" VerticalAlignment="Center" Margin="0,0,14,0" />

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" 
                                                       Foreground="{StaticResource BrushTextPrimary}"
                                                       FontSize="14" FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding Description}" Style="{StaticResource TextCaption}" />
                                            <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource TextBody}"
                                                       Margin="0,4,0,0" FontSize="12" />
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="{Binding Version}"
                                                   Style="{StaticResource TextMono}"
                                                   VerticalAlignment="Center" Margin="0,0,16,0" />

                                        <TextBlock Grid.Column="3" 
                                                   Text="{Binding Path}" 
                                                   Style="{StaticResource TextCaption}"
                                                   VerticalAlignment="Center"
                                                   MaxWidth="200" TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Sessions Directory -->
            <Border Style="{StaticResource GlassCard}">
                <StackPanel>
                    <TextBlock Text="Sessions Directory" Style="{StaticResource TextHeading2}" Margin="0,0,0,12" />
                    <TextBlock Text="Log sessions and screenshots are saved here:"
                               Style="{StaticResource TextBody}" Margin="0,0,0,8" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Text="{Binding SessionsDirectory}"
                                 Style="{StaticResource DarkTextBox}" IsReadOnly="True" />
                        <Button Grid.Column="1" Style="{StaticResource SecondaryButton}"
                                Content="Browse" Command="{Binding BrowseSessionsFolderCommand}"
                                Padding="14,8" Margin="8,0,0,0" />
                        <Button Grid.Column="2" Style="{StaticResource SecondaryButton}"
                                Content="Open" Command="{Binding OpenSessionsFolderCommand}"
                                Padding="14,8" Margin="8,0,0,0" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- About -->
            <Border Style="{StaticResource GlassCard}">
                <StackPanel>
                    <TextBlock Text="About" Style="{StaticResource TextHeading2}" Margin="0,0,0,16" />

                    <TextBlock Foreground="{StaticResource BrushTextPrimary}"
                               FontSize="18" FontWeight="SemiBold" Margin="0,0,0,4">
                        QA/QC Device Tool
                    </TextBlock>
                    <TextBlock Style="{StaticResource TextBody}" Margin="0,0,0,16">
                        <Run Text="Version " /><Run Text="{Binding AppVersion}" />
                    </TextBlock>

                    <TextBlock Style="{StaticResource TextBody}" TextWrapping="Wrap" Margin="0,0,0,20" LineHeight="22">
                        A Windows QA/QC utility for manual game testers. Supports Android &amp; iOS device log capture, session management, screen mirroring, and device snapshots.
                    </TextBlock>

                    <!-- Developer -->
                    <Border Background="{StaticResource BrushBackgroundMedium}" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Developer" Foreground="{StaticResource BrushTextMuted}" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" />
                            <TextBlock Text="Sundar Lohar" Foreground="{StaticResource BrushTextPrimary}" FontSize="15" FontWeight="SemiBold" />
                        </StackPanel>
                    </Border>

                    <!-- Reach Out -->
                    <Border Background="{StaticResource BrushBackgroundMedium}" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Reach Out" Foreground="{StaticResource BrushTextMuted}" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" />
                            <TextBlock Foreground="{StaticResource BrushAccent}" FontSize="13" Cursor="Hand">
                                <Hyperlink NavigateUri="https://github.com/sundarlohar007" Foreground="{StaticResource BrushAccent}" TextDecorations="None">
                                    github.com/sundarlohar007
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Foreground="{StaticResource BrushAccent}" FontSize="13" Margin="0,4,0,0">
                                sundar.lohar@ubisoft.com
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Powered By -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                        <TextBlock Text="Powered by " Style="{StaticResource TextCaption}" VerticalAlignment="Center" />
                        <TextBlock Text="AntiGravity" 
                                   Foreground="{StaticResource BrushAccent}" 
                                   FontSize="13" FontWeight="Bold" VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
