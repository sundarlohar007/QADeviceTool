<UserControl x:Class="QADeviceTool.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:QADeviceTool.ViewModels">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="32,24">

            <!-- Welcome Header -->
            <TextBlock Text="Dashboard" Style="{StaticResource TextHeading1}" Margin="0,0,0,4" />
            <TextBlock Text="{Binding WelcomeMessage}" Style="{StaticResource TextBody}" Margin="0,0,0,24" />

            <!-- Quick Actions -->
            <Border Style="{StaticResource GlassCard}">
                <StackPanel>
                    <TextBlock Text="Quick Actions" Style="{StaticResource TextHeading2}" Margin="0,0,0,16" />
                    <WrapPanel>
                        <Button Style="{StaticResource LargeActionButton}" Content="Start Session"
                                Command="{Binding QuickStartSessionCommand}" Margin="0,0,12,12" />
                        <Button Style="{StaticResource LargeActionButton}" Content="Mirror Screen"
                                Command="{Binding QuickMirrorCommand}" Margin="0,0,12,12" />
                        <Button Style="{StaticResource LargeActionButton}" Content="Snapshot"
                                Command="{Binding QuickSnapshotCommand}" Margin="0,0,12,12" />
                        <Button Style="{StaticResource SecondaryButton}" Content="Refresh Devices"
                                Command="{Binding RefreshDevicesCommand}" Margin="0,0,12,12"
                                Padding="24,16" FontSize="16" MinHeight="50" />
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- App-Specific Logging -->
            <Border Style="{StaticResource GlassCard}">
                <StackPanel>
                    <TextBlock Text="Targeted App Logging (Android)" Style="{StaticResource TextHeading2}" Margin="0,0,0,12" />
                    <TextBlock Text="Enter a partial app keyword (e.g. ubisoft). Starting a session will dynamically capture and isolate logs matching this specific running process ID automatically."
                               Style="{StaticResource TextBody}" TextWrapping="Wrap" Margin="0,0,0,12" />

                    <TextBlock Text="Target App Keyword:" Style="{StaticResource TextCaption}" Margin="0,0,0,4" />
                    <TextBox Text="{Binding TargetPackageName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource DarkTextBox}" />
                </StackPanel>
            </Border>

            <!-- Connected Devices -->
            <Border Style="{StaticResource GlassCard}">
                <StackPanel>
                    <TextBlock Text="Connected Devices" Style="{StaticResource TextHeading2}" Margin="0,0,0,16" />

                    <TextBlock Text="No devices connected. Connect a device via USB."
                               Margin="0,0,0,8">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource TextBody}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Devices.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <ItemsControl ItemsSource="{Binding Devices}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BrushBackgroundMedium}"
                                        CornerRadius="8" Padding="16,12" Margin="0,0,0,8"
                                        BorderBrush="{StaticResource BrushBorder}" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding PlatformIcon}"
                                                   FontSize="28" VerticalAlignment="Center" Margin="0,0,14,0" />

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DisplayName}" 
                                                       Foreground="{StaticResource BrushTextPrimary}"
                                                       FontSize="15" FontWeight="SemiBold" />
                                            <TextBlock Foreground="{StaticResource BrushTextSecondary}" FontSize="12"
                                                       Text="{Binding Serial}" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Width="8" Height="8" Fill="{StaticResource BrushSuccess}" Margin="0,0,6,0" />
                                            <TextBlock Text="{Binding StatusText}" Style="{StaticResource TextCaption}" 
                                                       Foreground="{StaticResource BrushSuccess}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Tool Status -->
            <Border Style="{StaticResource GlassCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Tool Status" Style="{StaticResource TextHeading2}" />
                        <Button Style="{StaticResource SecondaryButton}" Content="Re-check"
                                Command="{Binding LoadToolStatusesCommand}"
                                Margin="16,0,0,0" Padding="12,6" FontSize="12" VerticalAlignment="Center" />
                    </StackPanel>

                    <ItemsControl ItemsSource="{Binding ToolStatuses}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BrushBackgroundMedium}"
                                        CornerRadius="8" Padding="14,10" Margin="0,0,0,6"
                                        BorderBrush="{StaticResource BrushBorder}" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding StatusIcon}"
                                                   FontSize="18" VerticalAlignment="Center" Margin="0,0,12,0" />

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" 
                                                       Foreground="{StaticResource BrushTextPrimary}"
                                                       FontSize="13" FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource TextCaption}" />
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="{Binding Version}"
                                                   Style="{StaticResource TextMono}"
                                                   VerticalAlignment="Center" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
