<UserControl x:Class="QADeviceTool.Views.FileExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:QADeviceTool.ViewModels">

    <Grid Margin="24,16">
        <!-- ═══════ Full Page Layout ═══════ -->
        <Border Style="{StaticResource GlassCard}" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header / Controls -->
                    <RowDefinition Height="*"/>    <!-- DataGrid body -->
                    <RowDefinition Height="Auto"/> <!-- Status Footer -->
                </Grid.RowDefinitions>

                <!-- HEADER: Device Selector & Actions -->
                <StackPanel Grid.Row="0" Margin="16,16,16,16">
                    <TextBlock Text="Device File Explorer" Style="{StaticResource TextHeading1}" Margin="0,0,0,16" />

                    <!-- Top Row: Device + Global Actions -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Device Selection -->
                        <ComboBox Grid.Column="0" 
                                  ItemsSource="{Binding DataContext.DeviceVM.Devices, RelativeSource={RelativeSource AncestorType=Window}}"
                                  SelectedItem="{Binding SelectedDevice}"
                                  DisplayMemberPath="DisplayName"
                                  Width="250" VerticalAlignment="Center" />

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Style="{StaticResource SecondaryButton}" Content="Refresh"
                                    Command="{Binding RefreshCommand}" Padding="16,8" Margin="0,0,8,0"/>
                            <Button Style="{StaticResource PrimaryButton}" Content="Upload to Device"
                                    Command="{Binding UploadFileCommand}" Padding="16,8" Margin="0,0,8,0"/>
                            <Button Style="{StaticResource PrimaryButton}" Content="Download to PC"
                                    Command="{Binding DownloadFileCommand}" Padding="16,8" Margin="0,0,8,0"/>
                            <Button Style="{StaticResource SecondaryButton}" Content="Delete"
                                    Foreground="{StaticResource BrushDanger}" BorderBrush="{StaticResource BrushDanger}"
                                    Command="{Binding DeleteFileCommand}" Padding="16,8"/>
                        </StackPanel>
                    </Grid>

                    <!-- Path Bar -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Style="{StaticResource SecondaryButton}" Content="Up"
                                Command="{Binding NavigateUpCommand}" Padding="12,6" Margin="0,0,8,0" />
                        <TextBox Grid.Column="1" Text="{Binding CurrentPath, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource DarkTextBox}" FontSize="14" VerticalContentAlignment="Center" />
                        <Button Grid.Column="2" Style="{StaticResource SecondaryButton}" Content="Go"
                                Command="{Binding NavigateToPathCommand}" Padding="12,6" Margin="8,0,0,0" />
                    </Grid>
                </StackPanel>

                <!-- Loading Overlay logic inside the DataGrid container -->
                <Grid Grid.Row="1" Margin="16,0,16,0">
                    <!-- File DataGrid -->
                    <DataGrid ItemsSource="{Binding Files}"
                              SelectedItem="{Binding SelectedFile}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              GridLinesVisibility="None"
                              Background="Transparent"
                              RowBackground="Transparent"
                              AlternatingRowBackground="#05FFFFFF"
                              BorderThickness="1"
                              BorderBrush="{StaticResource BrushBorder}"
                              MouseDoubleClick="DataGrid_MouseDoubleClick">
                        
                        <DataGrid.Resources>
                            <!-- Match our dark theme nicely inside the DataGrid -->
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource BrushBackgroundDarkest}"/>
                                <Setter Property="Foreground" Value="{StaticResource BrushTextSecondary}"/>
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#25FFFFFF"/>
                                        <Setter Property="Foreground" Value="{StaticResource BrushAccent}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <!-- Icon Column -->
                            <DataGridTemplateColumn Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="18" Foreground="{StaticResource BrushAccent}" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Name Column -->
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />

                            <!-- Size Column -->
                            <DataGridTextColumn Header="Size" Binding="{Binding DisplaySize}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource TextMono}">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Modified Date Column -->
                            <DataGridTextColumn Header="Date Modified" Binding="{Binding DisplayDate}" Width="150" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Loading Spinner -->
                    <Border Background="#90000000" CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Wait..." Foreground="{StaticResource BrushAccent}" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="Transferring..." Foreground="{StaticResource BrushTextMuted}" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- FOOTER: Status -->
                <Border Grid.Row="2" Background="{StaticResource BrushBackgroundDarkest}" CornerRadius="0,0,8,8" Padding="16,8" Margin="0,0,0,0">
                    <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource TextCaption}" Foreground="{StaticResource BrushTextSecondary}" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
