<UserControl x:Class="QADeviceTool.Views.DeepLinkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:QADeviceTool.ViewModels">

    <Grid Margin="24,16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ═══════ LEFT: Device List ═══════ -->
        <Border Grid.Column="0" Style="{StaticResource GlassCard}" Margin="0,0,8,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Android Devices" Style="{StaticResource TextHeading2}" Margin="0,0,0,8" />
                    <TextBlock Text="Intent broadcast is available for Android targets." 
                               Style="{StaticResource TextCaption}" TextWrapping="Wrap" />
                </StackPanel>

                <TextBlock DockPanel.Dock="Top"
                           Text="No Android devices detected."
                           Margin="0,8,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBody}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Devices.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <ListBox ItemsSource="{Binding Devices}"
                         SelectedItem="{Binding SelectedDevice}"
                         Style="{StaticResource DarkListBox}"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource DarkListBoxItem}" />
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding PlatformIcon}" FontSize="18" 
                                           VerticalAlignment="Center" Margin="0,0,8,0" />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DisplayName}" 
                                               Foreground="{StaticResource BrushTextPrimary}"
                                               FontSize="13" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Serial}" Style="{StaticResource TextCaption}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- ═══════ RIGHT: Intent Broadcaster ═══════ -->
        <Border Grid.Column="1" Style="{StaticResource GlassCard}" Margin="8,0,0,0">
            <StackPanel>
                <TextBlock Text="Deep Link / Intent Router" Style="{StaticResource TextHeading2}" Margin="0,0,0,8" />
                <TextBlock Text="Fire a deep link URI or web URL to the selected device." Style="{StaticResource TextBody}" Margin="0,0,0,24" />

                <TextBlock Text="Target URL / URI Scheme" Style="{StaticResource TextCaption}" FontWeight="SemiBold" Margin="0,0,0,8" />
                <TextBox Text="{Binding TargetUrl, UpdateSourceTrigger=PropertyChanged}"
                         Background="{StaticResource BrushBackgroundDarkest}"
                         Foreground="{StaticResource BrushTextPrimary}"
                         BorderBrush="{StaticResource BrushBorder}"
                         BorderThickness="1"
                         Padding="12"
                         FontSize="14"
                         FontFamily="Consolas"
                         Height="120"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,16">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Modifiers="Control" Command="{Binding FireIntentCommand}" />
                    </TextBox.InputBindings>
                </TextBox>

                <WrapPanel>
                    <Button Style="{StaticResource PrimaryButton}" 
                            Content="Fire Intent"
                            Command="{Binding FireIntentCommand}"
                            Padding="24,12" FontSize="14" MinWidth="150"
                            IsEnabled="{Binding IsRouting, Converter={x:Static vm:InverseBoolConverter.Instance}}" />
                </WrapPanel>

                <Border Background="{StaticResource BrushBackgroundDarkest}" CornerRadius="4" Padding="12,12" Margin="0,24,0,0">
                    <DockPanel>
                        <ProgressBar DockPanel.Dock="Right" IsIndeterminate="{Binding IsRouting}" Width="100" Height="4" Margin="12,0,0,0"
                                     Visibility="{Binding IsRouting, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource BrushAccent}" VerticalAlignment="Center" FontSize="13" />
                    </DockPanel>
                </Border>

                <!-- Helpful examples -->
                <TextBlock Text="Examples:" Style="{StaticResource TextCaption}" FontWeight="SemiBold" Margin="0,24,0,8" />
                <StackPanel Margin="0,0,0,0">
                    <TextBlock Text="• https://www.google.com" Style="{StaticResource TextMono}" FontSize="12" Foreground="{StaticResource BrushTextMuted}" Margin="0,2" />
                    <TextBlock Text="• myapp://path/to/activity" Style="{StaticResource TextMono}" FontSize="12" Foreground="{StaticResource BrushTextMuted}" Margin="0,2" />
                    <TextBlock Text="• geo:37.7749,-122.4194" Style="{StaticResource TextMono}" FontSize="12" Foreground="{StaticResource BrushTextMuted}" Margin="0,2" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
